# DATABASE_URL=postgres://user:password@localhost:5432/timetable_db

APP_PORT=8080
APP_JWT_SECRET=your_secret_key

# Database Configuration
PG_USER=
PG_PASSWORD=
PG_HOST=
PG_PORT=
PG_DATABASE=
PG_SSLMODE=require

# Connection Pool Configuration (Optional - defaults provided)
# Maximum number of connections in the pool
PG_MAX_CONNS=25

# Minimum number of connections to maintain in the pool
PG_MIN_CONNS=5

# Maximum lifetime of a connection (duration format: 1h, 30m, etc.)
PG_MAX_CONN_LIFETIME=1h

# Maximum idle time for a connection before it's closed
PG_MAX_CONN_IDLE_TIME=30m
